{
  "manifest_version": 3,
  "name": "BuzzBro",
  "version": "1.0.0",
  "description": "AI-powered reply generator for X (Twitter) - Enhance your engagement with smart, context-aware responses",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["utils/api.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BuzzBro - AI Reply Generator",
    "default_icon": {
      "16": "data:image/svg+xml;base64,"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}
